generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String     @unique
  password  String
  isPremium Boolean    @default(false)
  createdAt DateTime   @default(now())
  avatarUrl String?
  bio       String?
  bookmarks Bookmark[]
  favorites Favorite[]
  userBooks UserBook[]   
}

model Book {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  gutenId   Int        @unique
  title     String
  authors   String[]
  coverUrl  String?
  content   String?
  createdAt DateTime   @default(now())

  bookmarks Bookmark[]
  favorites Favorite[]
}

model Bookmark {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    String   @db.ObjectId
  label     String?
  location  Int?
  createdAt DateTime @default(now())

  @@unique([userId, bookId])
}

model Favorite {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    String   @db.ObjectId
  createdAt DateTime @default(now())

  @@unique([userId, bookId])
}

model UserBook {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])

  title       String
  genre       String?        
  description String?        
  coverUrl    String?       
  content     String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

