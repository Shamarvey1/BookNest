
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  isPremium Boolean  @default(false)
  createdAt DateTime @default(now())
}


model Book {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  gutenId    Int      @unique
  title      String
  authors    String[]
  coverUrl   String?
  content    String?
  createdAt  DateTime @default(now())
}


